{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": ".",
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "moduleTypes": {
      "**/*": "esm"
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}